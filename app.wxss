/*遮罩层  */
  .public_shade{
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    max-width: 750rpx;
    margin: auto;
    background-color: rgba(0,0,0,0.4);
    z-index: 99999999;
  }
  .public_center{
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translateX(-50%) translateY(-50%);
    }
