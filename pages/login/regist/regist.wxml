    <view class="fl">已阅读并同意《<navigator url = "/" class="xy_btn">用户服务协议</navigator>》</view>
  </view> -->
  <view class="xieyi oh">
    <!-- <image class="fl" src="{{imgdata}}/duigou.png"></image> -->
    <view class='tongyiCheckbox fl'><checkbox-group bindchange="checkboxChange"><checkbox value="{{checkboxVal}}"></checkbox></checkbox-group></view>
    <view class="fl">已阅读并同意《<navigator url = "/" class="xy_btn">用户服务协议</navigator>》</view>
  </view>
  <view class="to_regist" bindtap='comfirmRegist'></view>
</view>
