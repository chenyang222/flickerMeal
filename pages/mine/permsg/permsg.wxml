<view class='permsg'>
    <view class='revisemsg'>
        <view class='reviselist'>
            <view class='reviseitem itemfirst' bindtap="chooseimage" >
                <view>头像</view>
                <view>
                    <image src='{{userHeadImg}}'></image> 
                    <image src='{{imgdata}}/mine/cf_goright.png'></image>
                </view>
            </view>
            <view class='reviseitem' bindtap="nichshow">
                <view>昵称</view>
                <view>
                  <text> {{ usernickname }} </text> 
                  <image src='{{imgdata}}/mine/cf_goright.png'></image> 
                </view>
            </view>
            <view class='reviseitem' bindtap="actionSheetTap">
                <view>性别</view>
                <view>
                     <text> {{ usersex }} </text> 
                     <image src='{{imgdata}}/mine/cf_goright.png'></image> 
                </view>
            </view>
            <!--性别弹出层  -->
            <action-sheet hidden="{{actionSheetHidden}}" bindchange="actionSheetbindchange">
                <block wx:for-items="{{actionSheetItems}}" wx:key="">
                    <action-sheet-item bindtap="bind{{item.bindtap}}">{{item.txt}}</action-sheet-item>
                </block>
                <action-sheet-cancel class="cancel">取消</action-sheet-cancel>
            </action-sheet>

            <view class='reviseitem' bindtap='invisetel'>
                <view>手机号码</view>
                <view>
                     <text> {{ userphone }} </text> 
                     <!-- <image src='{{imgdata}}/mine/cf_goright.png'></image> -->
                </view>
            </view>
