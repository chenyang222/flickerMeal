/**index.wxss**/
@import "../../style/public.wxss";
.top{
  color: #ffffff;
  height:290rpx;
  width:100%;
  background-size:100% 100%;
}
.top .header{
  line-height: 88rpx;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
}
.top .header image{
  margin: 25rpx;
  height: 37rpx;
  width: 37rpx;
}
.top .name{
  font-size: 28rpx;
  line-height: 28rpx;
}
.top .topMsg{
  padding-top: 20rpx;
  font-size: 22rpx;
  line-height: 40rpx;
  width: 100%;
  display: flex;
}
.top .right{
  margin-left: 15rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.top .right view{
  height: 40rpx;
}
.top .right view text{
  font-size: 22rpx;
}
.top .topMsg .img{
  margin-left: 26rpx;
  height: 100rpx;
  width: 100rpx;
}
.top .topMsg .img image{
  height: 95rpx;
  width: 95rpx;
}
.top .topMsg .money image,.top .topMsg .jifen image{
  margin: 1rpx 0;
  height: 25rpx;
  width: 25rpx;
  vertical-align: middle;
}
.top .topMsg .msg{
  font-size: 22rpx;
}
.top .topMsg .msg image{
  margin-left: 30rpx;
  width: 12rpx;
  height: 22rpx;
  vertical-align: middle;
}
.mineMsg{
  height: 40rpx;
  margin-right: 25rpx;
}
/**center**/
.center{
  padding-bottom: 100rpx;
}
.center .list{
 border-top: #eeeeee 1rpx solid;
}
.center .list .item{
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.center .list .item .item_left{
  width: 114rpx;
  height: 100%;
}
.center .list .item .item_left image{
  padding: 23rpx;
  width: 54rpx;
  height: 54rpx;
}
.center .list .item .item_center{
  flex: 1;
  border-bottom: #eeeeee 1rpx solid;
}
.center .list .item .item_right{
  border-bottom: #eeeeee 1rpx solid;
  padding-right: 30rpx;
}
.center .list .item .item_right image{
  width: 12rpx;
  height: 22rpx;
}