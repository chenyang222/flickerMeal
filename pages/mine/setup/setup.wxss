/*列表  */
.revisemsg{
  width: 100%;
}
.reviselist{
  width: 100%;
}
.reviseitem{
  width: 726rpx;
  float: right;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #d4d7dd;
  height: 99rpx;
  line-height: 99rpx;
  position: relative;
}
.reviseitem view:first-child{
  color: #000000;
  font-size: 28rpx;
}
.reviseitem view:last-child{
  margin-right: 30rpx;
  /* height: 100%;
  line-height: 100%; */
}
.reviseitem view:last-child image:last-child{
    width: 13rpx;
    height: 22rpx;
    margin-left: 30rpx;
}
.reviseitem  text{
  color: #000000;
  font-size: 28rpx;
}