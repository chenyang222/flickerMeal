<!--pages/mine/address/address.wxml-->
<view class="container">
<!--地址列表  -->
 <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" data-index="{{index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" wx:for="{{items}}" wx:key="" wx:for-index="index" wx:for-item="item">
  <view class="content" >
      <view class="item">
      <view class='itemLeft'>
        <image wx:if="{{item.defaultFlag == 1}}" src='{{imgdata}}/mine/address/cf_ditu.png'></image>
        <image wx:if="{{item.defaultFlag == 0}}" src='{{imgdata}}/mine/address/cf_noDitu.png'></image>
      </view>
      <view class='itemCenter'>
        <view class="itemCenterAddress"><text  >{{item.address}}</text></view>
        <view class='itemCenterName'><text>{{item.consignee}}  </text><text>{{ item.mobile }}</text></view>
        <view class='itemCenterDefalut'>
          <view>
            <image wx:if="{{item.defaultFlag == 1}}" src='{{imgdata}}/mine/address/cf_defalut.png' ></image>
            <image wx:if="{{item.defaultFlag == 0}}" bindtap="setDef" src='{{imgdata}}/mine/address/cf_noDefalut.png' id="{{item.id}}"></image>
          </view>
          <view style='margin-left:8rpx;'><text>设为默认收货地址</text></view>
        </view>
      </view> 
      <view class='itemRight'>
          <image id="{{item.id}}-{{item.consignee}}-{{item.mobile}}-{{item.areaCode}}-{{ item.address }}-{{item.defaultFlag}}" src='{{imgdata}}/mine/address/cf_editAddress.png' bindtap='editAddress' ></image>
      </view> 
    </view>
  </view>
  <view class="del" catchtap="del" id="{{item.id}}" >删除</view>
 </view>
<!--地址列表END  -->
  <navigator class='recharge' url='../../mine/addAddress/addAddress?state=0'>新建地址</navigator>
</view>
