<!--地址列表  -->
 <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" data-index="{{index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" wx:for="{{items}}" wx:key="" wx:for-index="index" wx:for-item="item">
  <view class="content" >
      <view class="item">
      <view class='itemLeft'>
        <image wx:if="{{item.isDefault == 1}}" src='{{imgdata}}/cf_ditu.png'></image>
        <image wx:if="{{item.isDefault == 0}}" src='{{imgdata}}/cf_noDitu.png'></image>
      </view>
      <view class='itemCenter'>
        <view class="itemCenterAddress"><text  >{{item.address}}</text></view>
        <view class='itemCenterName'><text>{{item.name}}  </text><text>{{ item.phone }}</text></view>
        <view class='itemCenterDefalut'>
          <view>
                <image wx:if="{{item.isDefault == 1}}" src='{{imgdata}}/cf_defalut.png' ></image>
                <image wx:if="{{item.isDefault == 0}}" bindtap="setDef" src='{{imgdata}}/cf_noDefalut.png' id="{{item.id}}"></image>
          </view>
          <view style='margin-left:8rpx;'><text>设为默认收货地址</text></view>
        </view>
      </view> 

      <view class='itemRight'>
        <!-- <navigator class='add' url='../../mine/addAddress/addAddress?state=1'> -->
          <image id="{{item.id}},{{item.address}},{{item.name}},{{ item.phone }},{{item.isDefault}}" src='{{imgdata}}/cf_editAddress.png' bindtap='editAddress' ></image>
        <!-- </navigator> -->
      </view> 

    </view>
  </view>
  <view class="del" catchtap="del" id="{{item.id}}" >删除</view>
 </view>
<!--地址列表END  -->

