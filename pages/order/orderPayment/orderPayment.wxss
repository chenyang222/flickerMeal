/* pages/shopCar/index.wxss */
@import "../../../style/public.wxss";
/* @import "../../../style/weui.wxss"; */

page {
  background-color: #f8f8f8;
}
.pop {
  background-color: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  z-index: 999;
}
.car-container {
}

.car-title {
  padding: 25rpx;
  /* position: relative; */
  background-color: #fff;
  margin-bottom: 1rpx;
  position: fixed;
  top: 0;
  z-index: 999;
  width: 93%;
  border-bottom: 1px solid #f7f7f7;
}

.goback {
  width: 20rpx;
  height: 34rpx;
  position: absolute;
  left: 25rpx;
  top: 35rpx;
}

.car-title text {
  display: inline-block;
  width: 100%;
  text-align: center;
}
.compa-icon{
  width:43rpx;
  height:48rpx;
}
.xing-list{
  width:30rpx;
  height:29rpx; 
}
.compa-title{
  padding: 25rpx;
  background-color: #fff;
  overflow: hidden;
}
.compa-name{
  font-size:26rpx;
  font-family:SourceHanSansCN-Medium;
  color:rgba(45,45,45,1);
  margin-left: 10rpx;
}

.submit-btn{
  width:596rpx;
  height:89rpx;
  line-height: 89rpx; 
  font-size:30rpx;
  background:rgba(255,158,53,1);
  border-radius: 45rpx ;
  color:rgba(255,255,255,1);
  text-align: center;
  margin: auto;
}
.shengyuTime{
  text-align: center;
  margin-top: 130rpx;
  padding-bottom: 10rpx;
  font-size:28rpx;
  font-family:SourceHanSansCN-Normal;
  color:rgba(51,51,51,1);
}
.paymentMethodList{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f9f4f0;
  margin-top: 10rpx;
}
.paymentMethodImg{
  width:69rpx;
  height:69rpx;
}
.selectedImg,.paymentNoSeleImg{
  width:38rpx;
  height:38rpx; 
  margin-top: 15rpx;
}
.paymentMethodName{
  font-size:30rpx;
  font-family:SourceHanSansCN-Medium;
  color:rgba(102,102,102,1);
  margin-top: 10rpx;
  margin-left: 90rpx;
}
.submit-btn{
  margin-top: 100rpx;
}
.price-fuhao{
  font-size:30rpx;
  font-family:SourceHanSansCN-Bold;
  color:rgba(245,65,60,1);
}
.price-num{
  font-size:53rpx;
  font-family:SourceHanSansCN-Bold;
  color:rgba(245,65,60,1);
}
.price-wrap{
  line-height: 20rpx;
}
.compa-wrap{
  margin-right: 30rpx;
}
.balance>view{
  float: left;
}
.yue-name{
  font-size:30rpx;
  font-family:SourceHanSansCN-Medium;
  color:rgba(102,102,102,1);
}
.shengyu-tips{
  font-size:22rpx;
  font-family:SourceHanSansCN-Medium;
  color:rgba(245,65,60,1);
}