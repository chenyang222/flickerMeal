/* pages/index/positionSele/positionSele.wxss */
@import '../../../style/public.wxss';
page{
  background-color: #f8f8f8;
}
.car-title text{
  display: inline-block;
  width: 100%;
  text-align: center;
}
.xiasanjiao{
  width: 20rpx;
  height: 15rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.sele-city-txt{
  font-size: 30rpx;
}
.area-name{
  font-size: 24rpx;
  color: #ff9e35;
  width:81rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search-icon{
  width: 34rpx;
  height: 34rpx;
  margin-top: 10rpx;
  margin-left:10rpx;
  margin-right: 10rpx; 
}
.search-wrap{
  background-color: #f6f6f6;
  border-radius: 5rpx;
  width: 80%;
}
.input-city{
  display: inline-block;
  font-size: 24rpx;
  width: 80%;
}
.city-sele{
  overflow: hidden;
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1px solid #b3b3b3;
  /* box-shadow:0rpx 0rpx 20rpx #b3b3b3; */
}
.city-sele >view{
  float: left;
}
.seleted-city{
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.position-ctl-icon{
  width: 26rpx;
  height: 26rpx;
  margin-top: 15rpx;
}
.relocation-txt{
  color: #ff9e35;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-left: 25rpx;
}
.current-city-txt{
  padding: 24rpx;
  font-size: 30rpx;
}
.position-ctl-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #fff;
}
.current-city-name{
  font-size: 28rpx;
  line-height: 50rpx;
}


/* 城市选择 */
.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}

.thisCity {
  padding-top: 30rpx;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #2ab4ff;
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #2ab4ff;
  text-align: center;
  min-width: 149.5rpx;
  margin: 20rpx 0 20rpx 30rpx;
}

.thishotText {
  color: #2ab4ff;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #2ab4ff !important;
}

.slectCity view {
  color: #2ab4ff !important;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
